<% @articles.each do |article| %>
  <% cache("article_#{article.slug}") do %>
    <article>
      <header>
        <h1><%= link_to(article.title, article_url(article.slug)) %></h1>
      </header>
      <nav>
        <ul>
          <li><%= link_to(article.domain.title, article.domain.url, :rel => :internal) %></li>
          <li><%= link_to("Veja o artigo original", article.origin_url, :rel => :internal) %></li>
          <li><time class="timeago" datetime="<%= article.published_at.iso8601%>" pubdate><%= article.published_at%></time></li>
          <li><%= tweet_button(:url => article_url(article.slug), :count => "horizontal")%></li>
        </ul>
      </nav>
      <div class="text"><%= article.text %></div>
    </article>
  <% end %>
<% end %>
<nav>
  <%= will_paginate @articles%>
</nav>